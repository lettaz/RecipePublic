<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_detail"
    tools:context=".DetailActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="20sp"
                android:text="FOOD NAME"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_extension"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/recipe_name"
                android:textSize="12sp"
                android:text="with blah blah"
                android:textColor="@android:color/black"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/difficult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficulty"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/difficult"
                    android:layout_alignParentRight="true"
                    android:id="@+id/difficulty"
                    android:layout_marginRight="4dp"
                    android:textSize="20sp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:text="DESCRIPTION"
                android:layout_below="@+id/recipe_extension"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_description"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/description"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ingredient"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:text="INGREDIENT"
                android:layout_below="@+id/recipe_description"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_ingredient"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/ingredient"
                android:textSize="15sp"
                android:textColor="@android:color/black"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>