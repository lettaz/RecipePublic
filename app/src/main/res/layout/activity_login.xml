<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/droppage"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="186dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/name2"
        android:src="@drawable/chef"
        android:layout_toRightOf="@+id/name2" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="176dp"
        android:paddingRight="20dp"
        android:text="Recipe"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="46dp" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/app_name"
        android:layout_below="@+id/app_name"
        android:text="App"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/app_name" />

    <TextView
        android:id="@+id/detaill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name2"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:text="Making your cooking problems not noticeable...." />

    <EditText
        android:id="@+id/email"
        style="@android:style/Widget.EditText"
        android:layout_width="295dp"
        android:layout_height="45dp"
        android:layout_below="@+id/detaill"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="46dp"
        android:background="@drawable/edit_text"
        android:drawableLeft="@drawable/ic_email"
        android:ems="10"
        android:hint="  Input email address"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="296dp"
        android:layout_height="45dp"
        android:layout_below="@+id/email"
        android:layout_marginTop="5dp"
       android:layout_marginLeft="46dp"
        android:background="@drawable/edit_text"
        android:drawableLeft="@drawable/ic_lock"
        android:ems="10"
        android:hint="  Input password"
        android:inputType="textPassword"
        android:paddingLeft="5dp" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_below="@+id/password"
        android:layout_marginTop="35dp"
        android:background="@color/colorPrimaryDark"
        android:text="Login" />
</RelativeLayout>